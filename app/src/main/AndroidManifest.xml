<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.batikkita">

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BatikKita">
        <activity android:name=".ui.search.SearchActivity"></activity>
        <activity android:name=".ui.cart.CartDetailActivity" />
        <activity android:name=".ui.mapDetail.MapDetailActivity" />
        <activity android:name=".ui.favorite.FavoriteActivity" />
        <activity android:name=".ui.notification.NotificationActivity" />
        <activity android:name=".ui.detail.DetailActivity" />
        <activity android:name=".ui.scan.ScanActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>